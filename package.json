{
  "name": "plug-checkout",
  "private": true,
  "description": "Plug Checkout is a webcomponent running on all front-end frameworks",
  "keywords": [
    "web-components",
    "react",
    "vue",
    "angular",
    "vanilla",
    "stencil",
    "payments",
    "checkout",
    "plug"
  ],
  "version": "1.0.0",
  "author": "Leonardo Pinheiro <leonardo@plugpagamentos.com>",
  "license": "MIT",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "npx lerna run lint --stream"
    ]
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/checkout-full/*",
      "packages/checkout/*"
    ],
    "nohoist": [
      "**/@types/**"
    ]
  },
  "scripts": {
    "prepare": "husky install",
    "start:sdk": "lerna run start --scope @plug-checkout/core",
    "build:sdk": "lerna run build --scope {@plug-checkout/core,@plug-checkout/angular,@plug-checkout/react,@plug-checkout/vue}",
    "start:full": "lerna run start --scope @plug-checkout-full/core",
    "build:full": "lerna run build --scope {@plug-checkout-full/core,@plug-checkout-full/angular,@plug-checkout-full/react,@plug-checkout-full/vue}",
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean",
    "refresh": "yarn clean -y && yarn bootstrap",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.7",
    "@changesets/cli": "^2.25.2",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.29.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.1"
  }
}
