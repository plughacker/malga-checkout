{
  "name": "@malga-checkout/vue",
  "sideEffects": false,
  "version": "1.10.2",
  "license": "MIT",
  "description": "Vue specific wrapper for Malga Checkout core components",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/plughacker/malga-checkout.git",
    "directory": "packages/checkout/vue"
  },
  "author": "Leonardo Pinheiro <leonardo@malga.io>",
  "bugs": {
    "url": "https://github.com/plughacker/malga-checkout/issues"
  },
  "keywords": [
    "payments",
    "malga",
    "checkout",
    "vue",
    "stenciljs",
    "webcomponents",
    "web-components"
  ],
  "scripts": {
    "test": "jest",
    "build:fix": "node ./scripts/fix-build-files/fix-build-files.js",
    "build": "yarn build:fix && yarn clean && yarn build:cjs && yarn build:esm",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "build:esm": "tsc --module es6 --outDir dist/esm",
    "clean": "rimraf dist"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist/"
  ],
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@vue/test-utils": "^2.0.0-rc.6",
    "jest": "26.6.3",
    "rimraf": "^2.6.3",
    "rollup": "^1.21.2",
    "rollup-plugin-node-resolve": "^5.2.0",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.2",
    "vue": "^3.1.1"
  },
  "dependencies": {
    "@malga-checkout/core": "1.10.2"
  },
  "jest": {
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "<rootDir>/setupTests.ts"
    ],
    "testPathIgnorePatterns": [
      "node_modules",
      "dist"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "warnOnly": true
        }
      }
    }
  }
}
