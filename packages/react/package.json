{
  "name": "@plug-checkout/react",
  "sideEffects": false,
  "version": "0.0.1",
  "private": true,
  "description": "React specific wrapper for Plug Checkout core components",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "build": "yarn clean && yarn compile",
    "clean": "rimraf dist",
    "compile": "yarn tsc",
    "tsc": "tsc -p ."
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "devDependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@types/jest": "^26.0.23",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.11",
    "jest": "^27.0.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^2.6.3",
    "rollup": "^1.21.2",
    "rollup-plugin-node-resolve": "^5.2.0",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.4"
  },
  "dependencies": {
    "@plug-checkout/core": "0.0.1"
  },
  "peerDependencies": {
    "react": "^16.7.0",
    "react-dom": "^16.7.0"
  },
  "jest": {
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "<rootDir>/setupTests.ts"
    ],
    "testPathIgnorePatterns": [
      "node_modules",
      "dist"
    ]
  }
}
