{
  "name": "@plug-checkout/vue",
  "sideEffects": false,
  "version": "0.0.3",
  "license": "MIT",
  "description": "Vue specific wrapper for Plug Checkout core components",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/plughacker/plug-checkout.git",
    "directory": "packages/vue"
  },
  "author": "Leonardo Pinheiro <leonardo@plugpagamentos.com>",
  "bugs": {
    "url": "https://github.com/plughacker/plug-checkout/issues"
  },
  "keywords": [
    "payments",
    "plug",
    "checkout",
    "vue",
    "stenciljs",
    "webcomponents",
    "web-components"
  ],
  "scripts": {
    "test": "jest",
    "build": "yarn clean && yarn compile",
    "clean": "rimraf dist",
    "compile": "yarn tsc",
    "tsc": "tsc -p ."
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@vue/test-utils": "^2.0.0-rc.6",
    "jest": "26.6.3",
    "rimraf": "^2.6.3",
    "rollup": "^1.21.2",
    "rollup-plugin-node-resolve": "^5.2.0",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.2",
    "vue": "^3.1.1"
  },
  "dependencies": {
    "@plug-checkout/core": "0.0.3"
  },
  "jest": {
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "<rootDir>/setupTests.ts"
    ],
    "testPathIgnorePatterns": [
      "node_modules",
      "dist"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "warnOnly": true
        }
      }
    }
  }
}
